{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Odds Ticker Plugin Configuration",
  "description": "Configuration schema for the Odds Ticker plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable or disable the odds ticker plugin"
    },
    "display_duration": {
      "type": "number",
      "default": 30,
      "minimum": 10,
      "maximum": 300,
      "description": "Duration in seconds to display the odds ticker (used when dynamic_duration is disabled)"
    },
    "show_favorite_teams_only": {
      "type": "boolean",
      "default": false,
      "description": "Only show odds for favorite teams"
    },
    "games_per_favorite_team": {
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5,
      "description": "Number of games to show per favorite team"
    },
    "max_games_per_league": {
      "type": "integer",
      "default": 5,
      "minimum": 1,
      "maximum": 20,
      "description": "Maximum number of games to show per league"
    },
    "show_odds_only": {
      "type": "boolean",
      "default": false,
      "description": "Show only odds, no game details"
    },
    "sort_order": {
      "type": "string",
      "enum": ["soonest", "league", "team"],
      "default": "soonest",
      "description": "Sort order for displaying games"
    },
    "enabled_leagues": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["nfl", "nba", "mlb", "ncaa_fb", "nhl"],
        "description": "League identifier"
      },
      "uniqueItems": true,
      "default": ["nfl"],
      "x-widget": "checkbox-group",
      "x-options": {
        "labels": {
          "nfl": "NFL",
          "nba": "NBA",
          "mlb": "MLB",
          "ncaa_fb": "NCAA Football",
          "nhl": "NHL"
        }
      },
      "description": "Select which leagues to display odds for"
    },
    "update_interval": {
      "type": "integer",
      "default": 3600,
      "minimum": 300,
      "maximum": 86400,
      "description": "How often to fetch new odds data in seconds"
    },
    "live_priority": {
      "type": "boolean",
      "default": false,
      "description": "Enable live priority takeover when plugin has live content"
    },
    "scroll_pixels_per_second": {
      "type": "number",
      "default": 15.0,
      "minimum": 5.0,
      "maximum": 50.0,
      "description": "Scroll speed in pixels per second. Lower values = slower scrolling. Recommended: 10-15 for comfortable reading"
    },
    "target_fps": {
      "type": "integer",
      "default": 120,
      "minimum": 30,
      "maximum": 200,
      "description": "Target frames per second for smooth scrolling. Higher values = smoother animation (120 recommended)"
    },
    "loop": {
      "type": "boolean",
      "default": true,
      "description": "Continuously loop the ticker. If false, stops at the end"
    },
    "future_fetch_days": {
      "type": "integer",
      "default": 7,
      "minimum": 1,
      "maximum": 90,
      "description": "Days ahead to fetch upcoming games"
    },
    "show_channel_logos": {
      "type": "boolean",
      "default": true,
      "description": "Show broadcast channel logos"
    },
    "dynamic_duration": {
      "type": "boolean",
      "default": true,
      "description": "Enable dynamic duration based on content width. Automatically adjusts display time based on how much content there is"
    },
    "min_duration": {
      "type": "integer",
      "default": 30,
      "minimum": 10,
      "maximum": 300,
      "description": "Minimum display duration in seconds when dynamic duration is enabled"
    },
    "max_duration": {
      "type": "integer",
      "default": 300,
      "minimum": 30,
      "maximum": 600,
      "description": "Maximum display duration in seconds when dynamic duration is enabled"
    },
    "duration_buffer": {
      "type": "number",
      "default": 0.1,
      "minimum": 0.01,
      "maximum": 1.0,
      "description": "Extra buffer time added to calculated duration (as percentage, 0.1 = 10%)"
    },
    "request_timeout": {
      "type": "integer",
      "default": 30,
      "minimum": 5,
      "maximum": 120,
      "description": "Request timeout in seconds for API calls"
    },
    "fetch_odds": {
      "type": "boolean",
      "default": true,
      "description": "Enable fetching of betting odds"
    },
    "leagues": {
      "type": "object",
      "properties": {
        "nfl": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NFL odds"
            },
            "favorite_teams": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z]{2,3}$",
                "description": "NFL team abbreviation"
              },
              "uniqueItems": true,
              "maxItems": 32,
              "description": "Favorite NFL teams for odds display"
            }
          },
          "additionalProperties": false
        },
        "nba": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NBA odds"
            },
            "favorite_teams": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z]{2,3}$",
                "description": "NBA team abbreviation"
              },
              "uniqueItems": true,
              "maxItems": 30,
              "description": "Favorite NBA teams for odds display"
            }
          },
          "additionalProperties": false
        },
        "mlb": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable MLB odds"
            },
            "favorite_teams": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z]{2,3}$",
                "description": "MLB team abbreviation"
              },
              "uniqueItems": true,
              "maxItems": 30,
              "description": "Favorite MLB teams for odds display"
            }
          },
          "additionalProperties": false
        },
        "ncaa_fb": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NCAA Football odds"
            },
            "favorite_teams": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z]{2,4}$",
                "description": "NCAA FB team abbreviation"
              },
              "uniqueItems": true,
              "maxItems": 130,
              "description": "Favorite NCAA FB teams for odds display"
            }
          },
          "additionalProperties": false
        },
        "ncaam_basketball": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable NCAA Men's Basketball odds"
            },
            "favorite_teams": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z]{2,4}$",
                "description": "NCAA MB team abbreviation"
              },
              "uniqueItems": true,
              "maxItems": 350,
              "description": "Favorite NCAA MB teams for odds display"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "customization": {
      "type": "object",
      "title": "Display Customization",
      "description": "Customize fonts for odds ticker display elements",
      "properties": {
        "team_text": {
          "type": "object",
          "title": "Team Names",
          "description": "Font settings for team names in the ticker",
          "properties": {
            "font": {
              "type": "string",
              "title": "Font Family",
              "description": "Select the font to use",
              "enum": [
                "PressStart2P-Regular.ttf",
                "4x6-font.ttf",
                "5by7.regular.ttf",
                "5x7.bdf",
                "4x6.bdf",
                "cozette.bdf"
              ],
              "default": "PressStart2P-Regular.ttf"
            },
            "font_size": {
              "type": "integer",
              "title": "Font Size",
              "description": "Font size in pixels",
              "minimum": 4,
              "maximum": 16,
              "default": 8
            }
          },
          "x-propertyOrder": ["font", "font_size"],
          "additionalProperties": false
        },
        "odds_text": {
          "type": "object",
          "title": "Odds/Spread",
          "description": "Font settings for odds, spread, and over/under information",
          "properties": {
            "font": {
              "type": "string",
              "title": "Font Family",
              "description": "Select the font to use",
              "enum": [
                "PressStart2P-Regular.ttf",
                "4x6-font.ttf",
                "5by7.regular.ttf",
                "5x7.bdf",
                "4x6.bdf",
                "cozette.bdf"
              ],
              "default": "PressStart2P-Regular.ttf"
            },
            "font_size": {
              "type": "integer",
              "title": "Font Size",
              "description": "Font size in pixels",
              "minimum": 4,
              "maximum": 16,
              "default": 8
            }
          },
          "x-propertyOrder": ["font", "font_size"],
          "additionalProperties": false
        },
        "datetime_text": {
          "type": "object",
          "title": "Game Date/Time",
          "description": "Font settings for game date and time",
          "properties": {
            "font": {
              "type": "string",
              "title": "Font Family",
              "description": "Select the font to use",
              "enum": [
                "PressStart2P-Regular.ttf",
                "4x6-font.ttf",
                "5by7.regular.ttf",
                "5x7.bdf",
                "4x6.bdf",
                "cozette.bdf"
              ],
              "default": "PressStart2P-Regular.ttf"
            },
            "font_size": {
              "type": "integer",
              "title": "Font Size",
              "description": "Font size in pixels",
              "minimum": 4,
              "maximum": 16,
              "default": 8
            }
          },
          "x-propertyOrder": ["font", "font_size"],
          "additionalProperties": false
        }
      },
      "x-propertyOrder": ["team_text", "odds_text", "datetime_text"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
