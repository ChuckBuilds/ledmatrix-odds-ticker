{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Odds Ticker Plugin Configuration",
  "description": "Configuration schema for the Odds Ticker plugin - displays betting odds for NFL, NBA, MLB, NHL, MiLB, and NCAA sports",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable or disable the odds ticker plugin"
    },
    "display_options": {
      "type": "object",
      "title": "Display Options",
      "description": "Configure display duration, scrolling speed, and visual settings",
      "x-collapsed": true,
      "properties": {
        "display_duration": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Duration in seconds to display the odds ticker (used when dynamic_duration is disabled)"
        },
        "dynamic_duration": {
          "type": "boolean",
          "default": true,
          "description": "Enable dynamic duration based on content width. Automatically adjusts display time based on how much content there is"
        },
        "min_duration": {
          "type": "integer",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Minimum display duration in seconds when dynamic duration is enabled"
        },
        "max_duration": {
          "type": "integer",
          "default": 300,
          "minimum": 30,
          "maximum": 600,
          "description": "Maximum display duration in seconds when dynamic duration is enabled"
        },
        "duration_buffer": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.01,
          "maximum": 1.0,
          "description": "Extra buffer time added to calculated duration (as percentage, 0.1 = 10%)"
        },
        "scroll_speed": {
          "type": "number",
          "description": "Scrolling speed in pixels per frame",
          "minimum": 0.5,
          "maximum": 5.0,
          "default": 1.0
        },
        "scroll_delay": {
          "type": "number",
          "description": "Delay between scroll steps in seconds (lower = faster scrolling)",
          "minimum": 0.001,
          "maximum": 0.1,
          "default": 0.02
        },
        "scroll_pixels_per_second": {
          "type": "number",
          "default": 50.0,
          "minimum": 5.0,
          "maximum": 100.0,
          "description": "Scroll speed in pixels per second (used for dynamic duration calculation). Set to match your actual scroll rate: scroll_speed / scroll_delay"
        },
        "target_fps": {
          "type": "integer",
          "default": 120,
          "minimum": 30,
          "maximum": 200,
          "description": "Target frames per second for smooth scrolling. Higher values = smoother animation (120 recommended)"
        },
        "loop": {
          "type": "boolean",
          "default": true,
          "description": "Continuously loop the ticker. If false, stops at the end"
        },
        "show_channel_logos": {
          "type": "boolean",
          "default": true,
          "description": "Show broadcast channel logos"
        }
      },
      "additionalProperties": false
    },
    "data_settings": {
      "type": "object",
      "title": "Data Settings",
      "description": "Configure data fetch intervals and API settings",
      "x-collapsed": true,
      "properties": {
        "update_interval": {
          "type": "integer",
          "default": 3600,
          "minimum": 300,
          "maximum": 86400,
          "description": "How often to fetch new odds data in seconds when there are no live games"
        },
        "live_game_update_interval": {
          "type": "integer",
          "default": 60,
          "minimum": 30,
          "maximum": 300,
          "description": "How often to fetch new odds data in seconds when there are live games being displayed"
        },
        "future_fetch_days": {
          "type": "integer",
          "default": 7,
          "minimum": 1,
          "maximum": 90,
          "description": "Days ahead to fetch upcoming games"
        },
        "request_timeout": {
          "type": "integer",
          "default": 30,
          "minimum": 5,
          "maximum": 120,
          "description": "Request timeout in seconds for API calls"
        },
        "fetch_odds": {
          "type": "boolean",
          "default": true,
          "description": "Enable fetching of betting odds"
        }
      },
      "additionalProperties": false
    },
    "filtering": {
      "type": "object",
      "title": "Filtering Options",
      "description": "Control which games and teams are displayed",
      "x-collapsed": true,
      "properties": {
        "show_favorite_teams_only": {
          "type": "boolean",
          "default": false,
          "description": "Only show odds for favorite teams across all leagues"
        },
        "games_per_favorite_team": {
          "type": "integer",
          "default": 1,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of games to show per favorite team"
        },
        "max_games_per_league": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of games to show per league"
        },
        "show_odds_only": {
          "type": "boolean",
          "default": false,
          "description": "Include only games that have odds data; games without odds will be excluded from the ticker"
        },
        "sort_order": {
          "type": "string",
          "enum": ["soonest", "league", "team"],
          "default": "soonest",
          "description": "Sort order for displaying games"
        }
      },
      "additionalProperties": false
    },
